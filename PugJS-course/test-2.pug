//- Displaying Product Information
- const products = {p1: '10$', p2: '20$', p3: '30$'}
ul
  each key in Object.keys(products)
    - const value = products[key]
    li #{key} : #{value}

//- Creating a Table of Students' Grades
- const students = [{name: 'Alice', grade: 'A'}, {name: 'Bob', grade: 'B'}, {name: 'Charlie', grade: 'C'}]
table
  tr
    th Name
    th Grade
  each obj in students
    tr
      td #{obj.name}
      td #{obj.grade}

