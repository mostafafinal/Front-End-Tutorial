    tr
      - for (col = 0; col < 8; col++)
        - let isWhite = (row + col) % 2 === 0
        td(style=`width: 50px; height: 50px; background-color: ${isWhite ? '#ddd' : 'black'};`)

//- Displaying a List of Tasks with Status
- const tasks = [{ title: 'Task 1', completed: true }, { title: 'Task 2', completed: false }, { title: 'Task 3', completed: true }];
ul
  each task in tasks
    li(class=`${task.completed ? 'completed' : 'pending'}`) #{task.title}

